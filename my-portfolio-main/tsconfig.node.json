{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    /* Modern JavaScript & Node features */
    "target": "ES2022",
    "lib": ["ES2023"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true
  },
  "include": [
    "vite.config.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
